<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="MainWindow" Height="243" Width="198.5">
    <Grid>
        <StackPanel Margin="10">
            <Label HorizontalAlignment="Center">Ip Адрес</Label>
            <TextBox x:Name="TextBoxIp" Text="127.0.0.1" HorizontalAlignment="Center"></TextBox>
            <Label HorizontalAlignment="Center">Логин</Label>
            <TextBox x:Name="LoginTB" Width="150" HorizontalAlignment="Center"></TextBox>
            <Label HorizontalAlignment="Center">Пароль</Label>
            <PasswordBox x:Name="PassTB" Width="150" HorizontalAlignment="Center"></PasswordBox>
            <Button HorizontalAlignment="Center" Width="100" Margin="0,10,0,0" Click="Button_Click">Войти в чат</Button>
            <CheckBox x:Name="RememberCB" Margin="0,5,0,0" HorizontalAlignment="Center">Запомнить меня</CheckBox>
        </StackPanel>
    </Grid>
</Window>
